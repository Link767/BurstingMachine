<Window x:Class="BurstingMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurstingMachine"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Height="801" Width="1609">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <ToolBarTray Margin="0,0,0,4" Grid.ColumnSpan="10"
                     Grid.RowSpan="2" Background="#FFD2D2D2">
            <ToolBar 
                ClipToBounds="False"
                Style="{StaticResource MaterialDesignToolBar}" Background="#FFD2D2D2">
                <Image Source="/Res/Logo.png" Height="44" Width="44"/>
                <Separator Background="#3F000000"/>
                <ComboBox x:Name="CBMeasurement"
                  materialDesign:HintAssist.Hint="Количество измерений"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                  Grid.ColumnSpan="2" Height="46" Width="236">
                    <ComboBoxItem Name="Solo"
                        Content="Однократное измерение" />
                    <ComboBoxItem Name="Grup"
                        Content="Множественное измерение" />
                </ComboBox>
                <Separator Background="#3F000000"/>
                <Button x:Name="Chart" Content="График"
                        Click="Chart_Click" Width="80"/>
                <Separator Background="#3F000000"/>
                <Button x:Name="Setings" Content="Настройки" 
                        Click="SetingsPage_Click"/>
                <Separator Background="#3F000000"/>
                <Button x:Name="Report" Content="Отчет" 
                        Click="Report_Click"/>
                <Separator Background="#3F000000"/>
                <Button x:Name="btnLogs" Content="Истроия" 
                        Click="History_Click"/>
                <Separator x:Name="LineLogs" Background="#3F000000"/>
                <Button x:Name="btnHelp" 
                        Click="btnHelp_Click_1">
                    <materialDesign:PackIcon Kind="Help" Foreground="#DD000000" />
                </Button>
            </ToolBar>
        </ToolBarTray>

        <Frame x:Name="ChartFrame" Grid.Column="1" Grid.Row="2" 
               NavigationUIVisibility="Hidden"
               Grid.ColumnSpan="8" Grid.RowSpan="9" 
               Margin="0,18,0,68" Height="629"/>

        <TextBox x:Name="TBLog"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Cтатус"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                 Grid.Column="1" Margin="5,19,55,0" Grid.Row="10" Grid.ColumnSpan="8"/>
        <materialDesign:Card Padding="4"
                             UniformCornerRadius="14" Margin="149,20,0,12" 
                             Grid.Row="10" Grid.Column="8">
            <ProgressBar x:Name="PBar"
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="50"/>
        </materialDesign:Card>
    </Grid>
</Window>
