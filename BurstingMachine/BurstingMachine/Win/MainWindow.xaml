<Window x:Class="BurstingMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurstingMachine"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnConnect"
                Grid.Column="2" Content="Соеденить" 
                HorizontalAlignment="Left" 
                Grid.Row="1" VerticalAlignment="Top" Width="98" 
                Grid.ColumnSpan="2" Margin="16,10,0,0" Click="btnConnect_Click"/>
        <Button x:Name="btnDisconekt"
                Grid.Column="1" Content="Отключить" 
                HorizontalAlignment="Left" 
                Grid.Row="1" VerticalAlignment="Top" Width="98" 
                Grid.ColumnSpan="2" Margin="10,10,0,0"/>
        <Button x:Name="btnUp"
                Grid.Column="7" Content="Вверх" 
                HorizontalAlignment="Left" 
                Grid.Row="5" VerticalAlignment="Center" 
                Width="105" Margin="80,0,0,0" Grid.ColumnSpan="2"/>
        <Button x:Name="btnDown"
                Grid.Column="7" Content="Вниз" 
                HorizontalAlignment="Left" 
                Grid.Row="4" VerticalAlignment="Center" 
                Width="105" Margin="80,0,0,0" Grid.ColumnSpan="2"/>
        <Button x:Name="btnStop"
                Grid.Column="7" Content="Cтоп" 
                HorizontalAlignment="Left" 
                Grid.Row="6" VerticalAlignment="Center" 
                Width="105" Grid.ColumnSpan="2" Margin="80,0,0,0" Click="btnStop_Click"/>
        <TextBox x:Name="TBLog" 
                 Grid.Column="7" Grid.ColumnSpan="2" 
                 HorizontalAlignment="Left" Margin="65,14,0,0" 
                 Grid.Row="1" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="120" Height="45"/>
        <ComboBox x:Name="CBPort" Grid.Column="3"
                  Grid.ColumnSpan="2" HorizontalAlignment="Left" 
                  Margin="38,10,0,0" Grid.Row="1" VerticalAlignment="Top" 
                  Width="120"/>
        <Button x:Name="Up" 
                Grid.Column="8" Content="UP" 
                HorizontalAlignment="Center" Margin="0,39,0,0" 
                Grid.Row="3" VerticalAlignment="Top" Width="44" Click="Up_Click"/>

        <ScottPlot:WpfPlot x:Name="WpfPlot1" Grid.Column="1" 
                           Margin="10,10,48,10" Grid.Row="2" Grid.ColumnSpan="7"
                           Grid.RowSpan="5"/>


    </Grid>
</Window>
