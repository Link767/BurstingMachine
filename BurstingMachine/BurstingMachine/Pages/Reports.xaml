<Page x:Class="BurstingMachine.Pages.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurstingMachine.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      d:DesignHeight="629" d:DesignWidth="1589"
      Title="Reports">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <DatePicker x:Name="DPData"
                    Style="{StaticResource MaterialDesignFilledDatePicker}" 
                    Grid.Column="2" Grid.ColumnSpan="2" 
                    Margin="9,10,10,10" SelectedDate="{x:Static sys:DateTime.Now}"
                    FontSize="20"/>

        <TextBox x:Name="TBNameTest"
                 VerticalAlignment="Center"
                 materialDesign:HintAssist.Hint="Название теста"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 TextWrapping="Wrap" Grid.ColumnSpan="2" 
                 Margin="10,0,11,0" Height="50"/>

        <Button x:Name = "btnSaveReport"
                Grid.Column = "3" Content = "Сохранить"
                HorizontalAlignment = "Center" VerticalAlignment = "Top"
                Width = "112"
                Background = "{x:Null}" BorderBrush = "Black"
                Foreground = "#DD000000" Grid.Row="7" Margin="0,28,0,0"/>

        <Frame x:Name="PreviewFrame" Grid.Column="7"
               Grid.RowSpan="9" Grid.ColumnSpan="5"
               Background="Green"/>
    </Grid>
</Page>
