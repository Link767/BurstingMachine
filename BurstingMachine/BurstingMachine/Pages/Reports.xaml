<Page x:Class="BurstingMachine.Pages.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BurstingMachine.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="629" d:DesignWidth="1589"
      Title="Reports">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>
        
        <DatePicker x:Name="DPData"
                    materialDesign:HintAssist.Hint="Дата проведения теста"
                    Style="{StaticResource MaterialDesignFilledDatePicker}" 
                    Grid.Column="4" Grid.ColumnSpan="2" 
                    Margin="9,10,10,60" Grid.RowSpan="2" Grid.Row="1"/>
        
        <TextBox x:Name="TBNameTest"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Название теста"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 TextWrapping="Wrap" Grid.Column="2" Grid.ColumnSpan="2" 
                 Margin="10,10,11,0" Grid.Row="1" Height="70" Grid.RowSpan="2"/>

        <Button x:Name = "btnSaveReport"
                Grid.Column = "5" Content = "Сохранить"
                HorizontalAlignment = "Center" VerticalAlignment = "Center"
                Width = "112"
                Background = "{x:Null}" BorderBrush = "Black"
                Foreground = "#DD000000" Grid.Row="6"/>
    </Grid>
</Page>
